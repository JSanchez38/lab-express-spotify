<div>
    {{#each result}}
        <img src="{{this.images.[0].url}}">
        <h2>{{this.name}}</h2>
        <a href="/albums/{{this.id}}">View Albums</a>

        <div class="card" style="width: 18rem;">
            <img src="{{this.images[0].url}}" class="card-img-top" alt="artist-img">

            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <a href="/albums/{{this.id}}" class="btn btn-primary">View Albums</a>
            </div>
        </div>
    {{/each}}
</div>